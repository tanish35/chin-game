generator client {
  provider = "prisma-client-js"
  output   = "node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Leaderboard {
  id          String   @id @default(cuid())
  userId      String   @unique
  displayName String
  totalTime   Int // total time in ms to complete quiz
  penalties   Int // total wrong guesses across all questions
  completedAt DateTime @default(now())

  @@map("leaderboards")
}
